<h1>任務總表</h1>

<%= link_to "新增任務", new_task_path %>

<table>
  <thead>
    <tr>
      <td>任務ID</td>
      <td>名稱</td>
      <td>優先順序</td>
      <td>狀態</td>
      <td>任務開始</td>
      <td>任務結束</td>
      <td>操作</td>
    </tr>
  </thead>
  
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.id %></td>
      <td><%= link_to task.title, task_path(task) %></td>
      <td><%= task.priority %></td>
      <td><%= task.status %></td>
      <td><%= task.task_begin %></td>
      <td><%= task.task_end %></td>
      <td>
        <%= link_to "編輯", edit_task_path(task) %>
        <%= link_to "刪除", task_path(task), method: 'delete', data: { confirm:  "確認刪除嗎？" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
