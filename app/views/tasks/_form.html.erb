<%= simple_form_for(task) do |form| %>

  <%= form.input :title, label: t("tasks.task_title"), placeholder: "例如：市場買菜" %>
  <%= form.input :content, label: t("tasks.task_content"), placeholder: "例如：雞蛋100顆"  %>
  <%= form.input :task_begin, label: t("tasks.task_begin") %>
  <%= form.input :task_end, label: t("tasks.task_end") %>
  <%= form.input :priority, as: :select, collection:[['low', t('tasks.priority_low')], ['normal', t('tasks.priority_normal')], ['urgent', t('tasks.priority_urgent')]], label_method: :second, value_method: :first, label: t("tasks.task_priority") %>
  <%= form.input :status, as: :select, collection:[['pending', t('tasks.status_pending')], ['proceeding', t('tasks.status_proceeding')], ['done', t('tasks.status_done')]], label_method: :second, value_method: :first, label: t("tasks.task_status") %>

<%= form.submit t("tasks.submit") %>
<% end %>

