<%= simple_form_for(task) do |form| %>

  <%= form.input :title, label: "任務名稱:" %>
  <%= form.input :content, label: "任務內容:"  %>
  <%= form.input :task_begin, label: "任務開始" %>
  <%= form.input :task_end, label: "任務結束" %>
  <%= form.input :priority, as: :select, collection:[["urgent", "urgent"], ["normal", "normal"], ["low", "low"]], label_method: :second, value_method: :first, label: "優先順序" %>
  <%= form.input :status, as: :select, collection:[["pending", "pending"], ["proceeding", "proceeding"], ["done", "done"]], label_method: :second, value_method: :first, label: "任務狀態" %>

<%= form.submit %>
<% end %>