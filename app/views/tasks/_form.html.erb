<%= form_for(task) do |form| %>

<div>
  <%= form.label :title, "任務名稱:" %>
  <%= form.text_field :title %>
</div>
<div>
  <%= form.label :content, "任務內容:" %>
  <%= form.text_area :content  %>
</div>
<div> 
  <%= label :status, "任務狀態" %>
  <%= form.radio_button :status, 'pending' %>
  <%= label :status, 'pending' %>
  <%= form.radio_button :status, 'proceeding' %>
  <%= label :status, 'proceeding' %>
  <%= form.radio_button :status, 'done' %>
  <%= label :status, 'done' %> 
</div>
<div>
  <%= label :priority, "優先順序:" %>
  <%= form.radio_button :priority, "low"  %>
  <%= label :priority, "low" %>
  <%= form.radio_button :priority, "normal" %>
  <%= label :priority, "normal" %>
  <%= form.radio_button :priority, "urgent" %>
  <%= label :priority, "urgent" %>
</div>
<div>
  <%= label :task_begin, "任務開始"  %>
  <%= form.datetime_field :task_begin %>
  <%= label :task_end, "任務結束"  %>
  <%= form.datetime_field :task_end  %>  
</div>

<%= form.submit %>
<% end %>